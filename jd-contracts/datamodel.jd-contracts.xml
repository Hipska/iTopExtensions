    {
      $aContextParam['filter']->ResetCondition();
      $aOrgIds = array( $aContextParam['source_obj']->Get('provider_id'),
                        $aContextParam['source_obj']->Get('org_id'));
      $aContextParam['filter']->AddCondition('org_id', $aOrgIds , 'IN');
    }
  }
}
