<?xml version="1.0" encoding="UTF-8"?>
<itop_design xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.4">


  <classes>
  
	<!-- Adds lock as a model type. Will allow users to define lots of different lock. -->
    <class id="Model"> 
	<fields>
        <field id="type" xsi:type="AttributeEnum">
          <values>
            <value id="Lock" _delta="define">Lock</value> 
		  </values>
        </field>
	</fields>
	</class>
	
	
	<!-- Adds a locktype class. -->
	<!-- Based on the original 'Brand' class -->
    <class id="LockType" _delta="define">
      <parent>Typology</parent>
      <properties>
        <category>bizmodel,searchable</category>
        <abstract>false</abstract>
        <key_type>autoincrement</key_type>
        <db_table>locktype</db_table>
        <db_key_field>id</db_key_field>
        <db_final_class_field/>
        <naming>
          <attributes>
            <attribute id="name"/>
          </attributes>
        </naming>
        <display_template/>
        <icon/>
        <reconciliation>
          <attributes>
            <attribute id="name"/>
          </attributes>
        </reconciliation>
      </properties>
      <fields>
        <field id="lock_list" xsi:type="AttributeLinkedSet">
          <linked_class>Lock</linked_class>
          <ext_key_to_me>locktype_id</ext_key_to_me>
          <edit_mode>add_only</edit_mode>
          <count_min>0</count_min>
          <count_max>0</count_max>
          <duplicates/>
        </field>
      </fields>
      <methods/>
      <presentation>
        <details>
          <items>
            <item id="name">
              <rank>10</rank>
            </item>
            <item id="lock_list">
              <rank>20</rank>
            </item>
          </items>
        </details>
        <search>
          <items>
            <item id="name">
              <rank>10</rank>
            </item>
          </items>
        </search>
        <list>
          <items>
            <item id="name">
              <rank>10</rank>
            </item>
          </items>
        </list>
      </presentation>
    </class>
	
	
	
	
	<!-- Adds lock -->
    <class id="Lock" _delta="define">
      <parent>PhysicalDevice</parent>
      <properties>
        <category>bizmodel,searchable</category>
        <abstract>false</abstract>
        <key_type>autoincrement</key_type>
        <db_table>lock</db_table>
        <db_key_field>id</db_key_field>
        <db_final_class_field/>
        <naming>
          <format>%1$s</format>
          <attributes>
            <attribute id="name"/>
          </attributes>
        </naming>
        <display_template/>
        <icon>images/locks.png</icon>
        <reconciliation>
          <attributes>
            <attribute id="name"/>
            <attribute id="org_id"/>
            <attribute id="organization_name"/>
          </attributes>
        </reconciliation>
      </properties>
      <fields>
		<field id="locksort" xsi:type="AttributeEnum">
            <values>
              <value id="digital">digital</value>
              <value id="analog">analog</value>
            </values>
            <sql>locksort</sql>
            <default_value>analog</default_value>
            <is_null_allowed>false</is_null_allowed>
            <display_style>radio_horizontal</display_style>
        </field>
        <field id="locktype_id" xsi:type="AttributeExternalKey">
					  <sql>locktype_id</sql>
					  <target_class>LockType</target_class>
					  <is_null_allowed>false</is_null_allowed>
					  <on_target_delete>DEL_AUTO</on_target_delete>
		</field>
	  </fields>
      <methods/>
      <presentation>
